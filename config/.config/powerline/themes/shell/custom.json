			},
			{
				"name": "virtualenv"
			},
			{
				"name": "cwd",
				"args": {
					"dir_limit_depth": 3
				}
			},
			{
				"module": "powerline.segments.shell",
				"name": "jobnum"
			}
		],
		"right": [
			{
				"module": "powerline.segments.shell",
				"name": "last_pipe_status"
			},
			{
				"name": "branch"
			}
		]
	}
